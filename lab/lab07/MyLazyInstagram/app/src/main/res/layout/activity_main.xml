<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kmitl.natcha58070069.com.mylazyinstagram.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textUser"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="46dp"
        android:text="\@android"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/scrollView"
        app:layout_constraintTop_toBottomOf="@+id/icon_grid"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textPost"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:text="Post\n10"
        app:layout_constraintLeft_toLeftOf="@+id/imageProfile"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFollowing"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Following\n1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="167dp"
        app:layout_constraintRight_toRightOf="@+id/scrollView"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="157dp"
        android:layout_marginRight="167dp" />

    <TextView
        android:id="@+id/textFollower"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Follower\n1000000"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="106dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_grid"
        android:layout_marginEnd="104dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_grid"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textPost"
        android:layout_marginLeft="106dp"
        android:layout_marginRight="104dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="459dp"
        android:layout_below="@+id/textUser"
        android:layout_weight="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/icon_grid"
        android:layout_width="15dp"
        android:layout_height="17dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="19dp"
        app:srcCompat="@drawable/pic_grid1"
        app:layout_constraintRight_toLeftOf="@+id/icon_list"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textFollowing"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textFollower"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="11dp"
        android:onClick="icon_grid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/icon_list"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_below="@+id/imageProfile"
        app:srcCompat="@drawable/pic_list2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/textFollowing"
        android:layout_marginEnd="42dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textFollower"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="42dp"
        android:onClick="icon_list"/>

    <ImageView
        android:id="@+id/icon_more"
        android:layout_width="18dp"
        android:layout_height="0dp"
        app:srcCompat="@android:drawable/ic_menu_more"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_list"
        android:layout_marginEnd="14dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/icon_list"
        app:layout_constraintLeft_toRightOf="@+id/icon_list"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="14dp" />

    <ScrollView
        android:layout_width="303dp"
        android:layout_height="40dp"
        android:id="@+id/scrollView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textUser"
        android:layout_marginEnd="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textUser"
        android:layout_marginRight="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textBio"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="The official Instagram for Android."
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="56dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
