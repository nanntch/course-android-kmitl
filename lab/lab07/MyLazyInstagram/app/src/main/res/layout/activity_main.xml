<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kmitl.natcha58070069.com.mylazyinstagram.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView"
        app:layout_constraintLeft_toLeftOf="@+id/textUser"
        app:layout_constraintRight_toRightOf="@+id/textUser"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textUser"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="6dp"
        android:text="\@android"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/icon_grid"
        app:layout_constraintTop_toBottomOf="@+id/imageProfile"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="6dp" />

    <TextView
        android:id="@+id/textPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post\n10"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="22dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/scrollView"
        android:layout_marginLeft="22dp" />

    <TextView
        android:id="@+id/textFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following\n1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="38dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textPost"
        android:layout_marginLeft="38dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        android:layout_marginBottom="9dp" />

    <TextView
        android:id="@+id/textFollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follower\n1000000"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textFollowing"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        android:layout_marginBottom="9dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/textUser"
        android:layout_weight="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="27dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/icon_list" />

    <ImageView
        android:id="@+id/icon_grid"
        android:layout_width="125dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="#F5F5F5"
        android:backgroundTintMode="src_atop"
        android:onClick="icon_grid"
        app:layout_constraintBottom_toBottomOf="@+id/icon_list"
        app:layout_constraintLeft_toLeftOf="@+id/textUser"
        app:layout_constraintTop_toTopOf="@+id/icon_list"
        app:srcCompat="@drawable/pic_grid1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/icon_list"
        android:layout_width="125dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imageProfile"
        android:layout_marginEnd="143dp"
        android:layout_marginRight="143dp"
        android:layout_marginTop="67dp"
        android:background="#F5F5F5"
        android:onClick="icon_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPost"
        app:srcCompat="@drawable/pic_list2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/icon_more"
        android:layout_width="124dp"
        android:layout_height="20dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintLeft_toRightOf="@+id/icon_list"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:srcCompat="@android:drawable/ic_menu_more"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="9dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="9dp"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toTopOf="@+id/icon_grid"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/textUser"
        app:layout_constraintRight_toRightOf="@+id/list"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <TextView
            android:id="@+id/textBio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="The official Instagram for Android." />

    </ScrollView>

</android.support.constraint.ConstraintLayout>
